{% extends 'layout.twig' %}

{% block body %}

    <script type='text/javascript'>
    function selectToken(el, defaultAcc){
        $.post( "/data/token/balance", { ticker: el.value })
            .done(function( data ) {
                let d = data;//JSON.parse(data);
                console.log(d.list);
                let html = ("<option value=''>---</option>");
                for (let i in d.list){
                    let selected = '';
                    if (defaultAcc && defaultAcc == d.list[i].name)
                        selected = 'selected';
                    if (!d.list[i].balance && !selected)
                        continue;    
                    html += ("<option "+selected+" value='"+d.list[i].name+"'> "+(d.list[i].name?d.list[i].name:d.list[i].address)+" [ "+(d.list[i].balance?d.list[i].balance:0)+" "+d.ticker+" ]</option>");
                }

                $("#account").html(html);

            });
    }

    {% if data.token %}
        $(()=>{
            selectToken({value: '{{data.token}}'}, '{{data.account}}');
        })
    {% endif %}
    </script>

	<form action='' method='POST'>

		{% if error %}
			<div class='alert alert-warning'>
				{{error}}
			</div>
		{% endif %}

		<div class="form-group row">
			<label for="token" class="col-sm-2 col-form-label">Token</label>
			<div class="col-sm-10">
				<select onchange='return selectToken(this);' name='token' class="form-control" id="token">
					<option value=''>---</option>
					{% for token in tokens %}
						<option {% if data.token == token %} selected {% endif %} value='{{token}}'>{{token}}</option>
					{% endfor %}
				</select>
			</div>
		</div>


		<div class="form-group row">
			<label for="account" class="col-sm-2 col-form-label">Account send from</label>
			<div class="col-sm-10">
				<select name='account' class="form-control" id="account">
					<option value=''>-- please select token first --</option>
				</select>
			</div>
		</div>

		<div class="form-group row">
			<label for="to" class="col-sm-2 col-form-label">Address to</label>
			<div class="col-sm-10">
				<input type='text' value="{{data.to}}" name='to' class="form-control" id="to">
			</div>
		</div>

		<div class="form-group row">
			<label for="amount" class="col-sm-2 col-form-label">Amount to send</label>
			<div class="col-sm-10">
				<input type='text' value="{{data.amount}}" name='amount' class="form-control" id="amount">
			</div>
		</div>

		<div class="form-group row">
			<label for="" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input type='submit' class='btn btn-primary' value='Send'>
			</div>
		</div>

	</form>

{% endblock %}
