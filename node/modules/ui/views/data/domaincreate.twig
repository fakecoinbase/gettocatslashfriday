{% extends 'layout.twig' %}

{% block body %}

	<form action='' method='POST'>

		{% if error %}
			<div class='alert alert-warning'>
				{{error}}
			</div>
		{% endif %}

		<div class="form-group row">
			<label for="from" class="col-sm-2 col-form-label">Account send from</label>
			<div class="col-sm-10">
				<select name='from' class="form-control" id="from">
					{% for addr in addressess %}
						<option {% if data.from == addr.name %} selected {% endif %} value='{{addr.name}}'>{{addr.name}}
							[
							{{addr.balancehr}}
							]</option>
					{% endfor %}
				</select>
			</div>
		</div>


		<div class="form-group row">
			<label for="account" class="col-sm-2 col-form-label">Account for domain assign</label>
			<div class="col-sm-10">
				<select name='account' class="form-control" id="account">
					{% for addr in addressess %}
						{% if addr.domain %}
                        {% else %}
							<option {% if data.account == addr.name %} selected {% endif %} value='{{addr.name}}'>{{addr.name}}
								[
								{{addr.balancehr}}
								]</option>
						{% endfor %}
					{% endfor %}
				</select>
			</div>
		</div>

		<div class="form-group row">
			<label for="domain" class="col-sm-2 col-form-label">Domain</label>
			<div class="col-sm-10">
				<input type='text' value="{{data.domain}}" name='domain' class="form-control" id="domain">
			</div>
		</div>

		<div class="form-group row">
			<label for="" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input type='submit' class='btn btn-primary' value='Create domain'>
			</div>
		</div>

	</form>

{% endblock %}
